@using Company_DAL.Models

@model Employee
@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4">Update Employee</h1>
<br />
<br />
<form asp-action="Update">
    <div class="mb-3">
        <label asp-for="Name">Name :</label>
        <input type="text" asp-for="Name" placeholder="Name Of Employee" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="HiringDate">Hiring Date :</label>
        <input asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>
    <div class="mb-3>
        <label asp-for="Email">Email :</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3>
        <label asp-for="Age">Age :</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="mb-3>
        <label asp-for="Gender">Gender :</label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="mb-3>
        <label asp-for="Salary">Salary :</label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="mb-3>
        <label asp-for="Address">Address :</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="mb-3>
        <label asp-for="Phone">Phone Number :</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="mb-3>
        <label asp-for="DepartmentId">Department Id :</label>
        <input asp-for="DepartmentId" class="form-control" />
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <div class="mb-3>
        <label asp-for="IsActive">IsActive :</label>
        <input asp-for="IsActive" class="form-control" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="mb-3>
        <label asp-for="IsDeleted">IsDeleted :</label>
        <input asp-for="IsDeleted" class="form-control" />
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>
    <input type="submit" value="Update Employee" class="btn btn-outline-success pt-2 pb-2 pl-5 pr-5 mt-3" />
    <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary pt-2 pb-2 pl-5 pr-5 mt-3">Back To List</a>
</form>