@using Company_DAL.Models
@model IEnumerable<Department>
@{
    ViewData["Title"] = "All";
}

<h1 class="mt-5">All Department</h1>
<br />
<br />
<a asp-controller="Department" asp-action="Create" class="btn btn-outline-primary mt-4 mb-4">Add Department</a>

@if(@Model.Count()>0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Id</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <td><a asp-controller="Department" asp-action="Details" asp-route-id="@department.Id" class="btn btn-info">Details <i class="fa-regular fa-eye"></i></a></td>
                    <td><a asp-controller="Department" asp-action="Update" asp-route-id="@department.Id" class="btn btn-success">Update <i class="fa-solid fa-pen"></i></a></td>
                    <td><a asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">Delete <i class="fa-solid fa-trash-can"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="mt-5 text-danger alert-danger p-3">You Don't Have Any Department</h1>
}

