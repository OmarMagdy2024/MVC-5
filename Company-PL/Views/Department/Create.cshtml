@using Company_DAL.Models

@model Department
@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4">Create Department</h1> 
<br />
<br />
<form asp-action="Create">
   <div class="mb-3">
        <label asp-for="Name">Name :</label>
        <input type="text" asp-for="Name" placeholder="Name Of Department" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
   </div>
    <div>
        <label asp-for="DateOfCreation">Date Of Creation :</label>
        <input asp-for="DateOfCreation" class="form-control" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>
    <input type="submit" value="Create Department" class="btn btn-outline-success pt-2 pb-2 pl-5 pr-5 mt-3" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-outline-primary pt-2 pb-2 pl-5 pr-5 mt-3">Back To List</a>
</form>

