<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Company</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-light shadow">
            <div class="container-fluid m-2">
                <p class="navbar-brand font-weight-bold text-primary offset-1">Company</p>
                <center class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Home" class="link-opacity-50-hover m-2 ml-5">Home</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Employee" class="link-opacity-50-hover m-2">Employee</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Department" class="link-opacity-50-hover m-2">Department</a>
                        </li>
                    </ul>
                </center>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light shadow">
        <center/>
           All Copt Rights for Company &copy; @DateTime.Now.Year
        </center>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    @await RenderSectionAsync("Validation", required: false)
</body>
</html>
